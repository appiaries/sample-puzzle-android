<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/LayoutVerticalStyle"
            android:layout_gravity="end" >

            <LinearLayout
                style="@style/LayoutVerticalStyle"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/validation"
                    style="@style/ErrorLableStyle"
                    android:layout_marginBottom="10dp"
                    android:text="@string/mesError"
                    android:visibility="gone" />

                <TextView
                    style="@style/SettingLableStyle"
                    android:text="@string/txtId"
                    android:textSize="8pt" />

                <EditText
                    android:id="@+id/txtId"
                    style="@style/HomeTxtDescStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="start|center_horizontal"
                    android:background="@drawable/edit_text_border_style"
                    android:maxLength="20" />

                <TextView
                    style="@style/SettingLableStyle"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/txtPassword"
                    android:textSize="8pt" />

                <EditText
                    android:id="@+id/txtPassword"
                    style="@style/HomeTxtDescStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="start|center_horizontal"
                    android:background="@drawable/edit_text_border_style"
                    android:inputType="textPassword"
                    android:maxLength="20" />
            </LinearLayout>

            <Button
                android:id="@+id/btnLogin"
                style="@style/ButtonStyle"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_button"
                android:text="@string/btnLogin" />

            <Button
                android:id="@+id/btnSignUp"
                style="@style/ButtonStyle"
                android:layout_marginTop="10dp"
                android:background="@drawable/my_button"
                android:text="@string/btnSignUp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>