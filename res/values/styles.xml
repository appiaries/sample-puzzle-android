<resources xmlns:android="http://schemas.android.com/apk/res/android">

  <!--
      Base application theme, dependent on API level. This theme is replaced
      by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Light">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
  </style>

  <style name="LayoutVerticalStyle">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="LayoutHorizontalStyle">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:orientation">horizontal</item>
  </style>

  <style name="ButtonStyle">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">#000000</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:layout_margin">10dp</item>
  </style>

  <style name="Button_100dpStyle">
    <item name="android:layout_margin">10dp</item>
    <item name="android:background">#000000</item>
    <item name="android:textColor">#ffffff</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="HomeTxtDescStyle">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">9pt</item>
    <item name="android:textColor">#000000</item>
    <item name="android:layout_margin">10dp</item>
  </style>

  <style name="txtPasswordReminder">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center|right</item>
    <item name="android:textSize">6pt</item>
    <item name="android:textColor">#000000</item>
    <item name="android:layout_margin">10dp</item>
  </style>

  <style name="HomeImgStyle">
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:layout_marginBottom">5dp</item>
  </style>

  <style name="PasswordReminderDecsLabelStyle">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">6pt</item>
    <item name="android:textColor">#000000</item>
    <item name="android:layout_marginLeft">10dp</item>
  </style>

  <style name="ErrorLabelStyle">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">7pt</item>
    <item name="android:textColor">#FF1702</item>
    <item name="android:layout_marginLeft">10dp</item>
  </style>

  <style name="SettingLabelStyle">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">6pt</item>
    <item name="android:textColor">#000000</item>
    <item name="android:layout_marginLeft">10dp</item>
  </style>

  <style name="SettingDrpListStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">6pt</item>
    <item name="android:textColor">#000000</item>
    <item name="android:layout_margin">10dp</item>
  </style>

</resources>
